<div class="container">
    <h2 align="center">Car list</h2>
</div>
<div class="container">
    <div align="center">
        <%= render 'layouts/flash' %> 
        <table>
            <tr>
                <th>Make</th>
                <th>Model</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            <% @cars.each do |car| %>
                <tr>
                    <td><%= car.make %></td>
                    <td><%=link_to car.name, car_path(car), class: "link" %></td>
                    <td><%= car.price %></td>
                    <td><%= car.description %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>
